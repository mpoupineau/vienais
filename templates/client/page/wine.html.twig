{% extends 'client/base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('client/css/page/wine.css') }}">
{% endblock %}
{% block title_page %}Nos vins{% endblock %}

{% block body %}
    <!-- Welcome -->
    <section class="section-welcome bg1-pattern p-t-120 p-b-105">
        <div class="container">
            <div class="row">
                <div class="col-md-6 p-t-45 p-b-30">
                    <div class="wrap-text-welcome t-center">
						<span class="tit2 t-center">
							Italian Restaurant
						</span>

                        <h3 class="tit3 t-center m-b-35 m-t-5">
                            Welcome
                        </h3>

                        <p class="t-center m-b-22 size3 m-l-r-auto">
                            Donec quis lorem nulla. Nunc eu odio mi. Morbi nec lobortis est. Sed fringilla, nunc sed imperdiet lacinia, nisl ante egestas mi, ac facilisis ligula sem id neque.
                        </p>

                        <a href="about.html" class="txt4">
                            Our Story
                            <i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 p-b-30">
                    <div class="wrap-pic-welcome size2 bo-rad-10 hov-img-zoom m-l-r-auto">
                        <img src="images/our-story-01.jpg" alt="IMG-OUR">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- nos vins -->
    <section class="section-intro">
        <div class="header-intro parallax100 t-center p-t-135 p-b-158" style="background-image: url({{ asset('images/nos-vins.jpg') }});">
			<span class="tit2 p-l-15 p-r-15">
				Découvrer
			</span>

            <h3 class="tit4 t-center p-l-15 p-r-15 p-t-3">
                Nos cuvées
            </h3>
        </div>

        <div class="content-intro bg-white p-t-77 p-b-133">
            <div class="container">
                <div class="row">
                    {% for cuvee in cuvees %}
                            <div class="col-md-4 p-t-30">
                                <!-- Block1 -->
                                <div class="blo1">
                                    <div class="wrap-pic-blo1 bo-rad-10 hov-img-zoom"  data-toggle="modal" data-id="{{ cuvee.id }}" data-target="#modalCuvee">
                                        <img class="cuvee-image" src="{{ asset( image_cuvee_location ~ cuvee.imagePath) }}" alt="no image">
                                    </div>

                                    <div class="wrap-text-blo1 p-t-35">
                                        <a href="#"><h4 class="txt5 color0-hov trans-0-4 m-b-13">
                                                {{ cuvee.name }}
                                            </h4></a>

                                        <p class="m-b-20">
                                            {{ cuvee.description }}
                                        </p>

                                        <!--<button type="button" class="txt4" data-toggle="modal" data-id="{{ cuvee.id }}" data-target="#modalCuvee">
                                            En savoir plus
                                            <i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
                                        </button>-->
                                    </div>
                                </div>
                            </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="modalCuvee" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg"  role="document">
            <div class="modal-content">
                <div class="modal-body-cuvee">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Intro -->
    <section class="section-intro">
        <div class="header-intro parallax100 t-center p-t-135 p-b-158" style="background-image: url({{ asset('images/nos-vins.jpg') }});">
			<span class="tit2 p-l-15 p-r-15">
				Découvrer
			</span>

            <h3 class="tit4 t-center p-l-15 p-r-15 p-t-3">
                Nos bouteilles
            </h3>
        </div>

        <div class="content-intro bg-white p-t-77 p-b-133">
            <div class="container">

                    {% for bottle in bottles %}
                        <div class="row bottle_line">
                            <div class="col-2">
                                <div >
                                <img style="width:100px" src="{{ asset( image_cuvee_location ~ bottle.cuvee.imagePath) }}" alt="no image">
                                </div>
                            </div>
                            <div class="col-2">
                                <b>{{ bottle.year }} {{ bottle.cuvee.name }}</b>
                            </div>
                            <div class="col-6">
                                <span class="title">
                                    Description :
                                </span><br/>
                                {{ bottle.description }}
                            </div>
                            <div class="col-2">
                                {{ bottle.price|number_format(2) }} €
                            </div>
                        </div>
                    {% endfor %}
            </div>
        </div>
    </section>


    <div id="modalCuvee">t
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script type="text/javascript" src="{{ asset('client/js/page/wine.js') }}"></script>
{% endblock %}