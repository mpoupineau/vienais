{% extends 'client/base.html.twig' %}
{% block title %}Domaine des Vienais{% endblock %}
{% block title_page %}Domaine des Vienais{% endblock %}
{% block header_image %}
    <section class="section-slide">
        <div class="wrap-slick1">
            <div class="slick1">
                <div class="item-slick1 item1-slck1" style="background-image: url({{ asset('client/images/home_header_2.jpg')}});">
                    <div class="wrap-content-slide1 sizefull flex-col-c-m p-l-15 p-r-15 p-t-150 p-b-170">
						<span class="caption1-slide1 txt1 t-center animated visible-false m-b-15" data-appear="fadeInDown">
							Bienvenue au
						</span>

                        <h2 class="caption2-slide1 tit1 t-center animaed visible-false m-b-37" data-appear="fadeInUp">
                            Domaine des Vienais
                        </h2>

                        <div class="wrap-btn-slide1 animated visible-false" data-appear="zoomIn">
                            <!-- Button1 -->
                            <a href="{{ path('client_presentation')}}" class="btn1 flex-c-m size1 txt3 trans-0-4">
                                {{ 'Le domaine'|trans }}
                            </a>
                        </div>
                    </div>
                </div>

                <div class="item-slick1 item2slick1" style="background-image: url({{ asset('client/images/home_header_1.jpg')}});">
                    <div class="wrap-content-slide1 sizefull flex-col-c-m p-l-15 p-r-15 p-t-150 p-b-170">
						<span class="caption1-slide1 txt1 t-center animated visible-false m-b-15" data-appear="rollIn">
							Bienvenue au
						</span>

                        <h2 class="caption2-slide1 tit1 t-center animated visible-false m-b-37" data-appear="lightSpeedIn">
                            Domaine des vienais
                        </h2>

                        <div class="wrap-btn-slide1 animated visible-false" data-appear="slideInUp">
                            <!-- Button1 -->
                            <a href="{{ path('client_wine') }}" class="btn1 flex-c-m size1 txt3 trans-0-4">
                                {{ 'Nos vins'|trans }}
                            </a>
                        </div>
                    </div>
                </div>

                <div class="item-slick1 item3-lick1" style="background-image: url({{ asset('client/images/home_header_0.jpeg')}});">
                    <div class="wrap-content-slide1 sizefull flex-col-c-m p-l-15 p-r-15 p-t-150 p-b-170">
						<span class="caption1-slide1 txt1 t-center animated visible-false m-b-15" data-appear="rotateInDownLeft">
							Bienvenue au
						</span>

                        <h2 class="caption2-slide1 tit1 t-center animated visible-false m-b-37" data-appear="rotateInUpRight">
                            Domaine des Vienais
                        </h2>

                        <div class="wrap-btn-slide1 animated visible-false" data-appear="rotateIn">
                            <!-- Button1 -->
                            <a href="{{ path('client_contact') }}" class="btn1 flex-c-m size1 txt3 trans-0-4">
                                {{ 'Contactez-nous'|trans }}
                            </a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="wrap-slick1-dots"></div>
        </div>
    </section>

    <!-- Welcome -->
    <section class="bg1-pattern p-t-120 p-b-105">
        <div class="container">
            <div class="row">
                <div class="col-md-6 p-t-45 p-b-30">
                    <div class="wrap-text-welcome t-center">
						<span class="tit2 t-center">
							Domaine des Vienais
						</span>

                        <h3 class="tit3 t-center m-b-35 m-t-5">
                            {{ 'Bienvenue'|trans}}
                        </h3>

                        <p class="t-center m-b-22 size3 m-l-r-auto">
                            Situé au cœur du village de BENAIS, notre domaine est la propriété de la famille POUPINEAU depuis plusieurs générations.
                        </p>

                        <a href="{{ path('client_presentation' )}}" class="txt4">
                            {{ 'Le domaine'|trans }}
                            <i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 p-b-30">
                    <div class="wrap-pic-welcome size2 bo-rad-10 hov-img-zoom m-l-r-auto">
                        <img src="{{ asset('client/images/presentation/domaine.jpg') }}" alt="IMG-OUR">
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% if news is not null %}
    <section>
        <div class="parallax0 parallax100" style="background-image: url({{ asset( image_news_location ~ news.imagePath) }});">
            <div class="overlay0-parallax t-center size34 p-t-20">
                <h3 class="tit4 t-center p-l-15 p-r-15 p-t-3">
                    {{ news.title }}
                </h3>
                <p class="p-l-15 p-r-15" style="color: white">
                    {{ news.text }}<br>
                    <a href="{{ path('client_news' )}}" class="txt6">
                        {{ 'En savoir plus'|trans }}
                        <i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
                    </a>
                </p>
                <p>
                </p>
            </div>
        </div>
    </section>
    {% endif %}

    <section class="bg2-pattern p-t-120 p-b-105">
        <div class="container">
            <div class="row">
                <div class="col-md-6 p-b-30">
                    <div class="wrap-pic-welcome size2 bo-rad-10 hov-img-zoom m-l-r-auto">
                        <img src="{{ asset( image_cuvee_location ~ cuvee[0].imagePath) }}" alt="IMG-OUR">
                    </div>
                </div>
                <div class="col-md-6 p-t-45 p-b-30">
                    <div class="wrap-text-welcome t-center">
						<span class="tit2 t-center">
							Cuvée
						</span>

                        <h3 class="tit3 t-center m-b-35 m-t-5">
                            {{ cuvee[0].name }}
                        </h3>

                        <p class="t-center m-b-22 size3 m-l-r-auto">
                            {{ cuvee[0].description }}
                        </p>

                        <a href="{{ path('client_wine' )}}" class="txt4">
                            {{ 'Découvrir nos cuvées'|trans }}
                            <i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg3-pattern p-t-120 p-b-105">
        <div class="container">
            <div class="row">
                <div class="wrap-gallery isotope-grid flex-w p-l-25 p-r-25">
                    {% for photo in photos %}
                        <div class="item-gallery hov-img-zoom">
                            <img src="{{ asset( photo_location ~ photo.imagePath) }}" alt="image non existante">
                        </div>
                    {% endfor %}
                </div>
            </div>
            <p class="t-center">
                <a href="{{ path('client_gallery' )}}" class="txt6">
                    {{ 'Nos photos'|trans }}
                    <i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
                </a>
            </p>
        </div>
    </section>
{% endblock %}

{% block body %}

{% endblock %}
