{% extends 'client/base.html.twig' %}

{% block title_page %}{{ 'Actualité' | trans}}{% endblock %}
{% block meta_keywords %}Domaine des Vienais, Guillaume Poupineau, Gérard Poupineau, vin de Bourgueil, Benais, actualité{% endblock %}
{% block meta_description %}{{ news.title }}{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-lg-9">
                    <div class="p-t-80 p-b-124 bo5-r h-full p-r-50 p-r-0-md bo-none-md">
                        <!-- Block4 -->

                        <div class="blo4 p-b-63">
                            <!-- - -->
                            <div class="pic-blo4 hov-img-zoom bo-rad-10 pos-relative">
                                    <img style="max-height:700px" src="{{ asset( image_news_location ~ news.imagePath) }}" alt="IMG-BLOG">

                                <div class="date-blo4 flex-col-c-m">
									<span class="txt30 m-b-4">
										{{ news.createdAt|date("d") }}
									</span>

                                    <span class="txt31">
										{{ news.createdAt|date("m/Y") }}
									</span>
                                </div>
                            </div>

                            <!-- - -->
                            <div class="text-blo4 p-t-33">
                                <h4 class="p-b-16 tit9">{{ news.title }}
                                </h4>
                                <p>
                                    {{ news.text }}
                                </p>
                            </div>
                            <h4 class="txt33 p-b-35 p-t-58">
                                <a href="{{ path('client_news') }}">
                                    {{ "Retour" |trans }}
                                </a>
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-3">
                    <div class="sidebar2 p-t-80 p-b-80 p-l-20 p-l-0-md p-t-0-md">
                        <!-- Most Popular -->
                        <div class="popular">
                            <h4 class="txt33 p-b-35 p-t-58">
                                <a href="{{ path('client_news') }}">
                                    {{ "Retour" |trans }}
                                </a>
                            </h4>
                            <h4 class="txt33 p-b-35 p-t-58">
                                {{ "Raccourci" |trans }}
                            </h4>

                            <ul>
                                {% for news in newsList %}
                                    <li class="flex-w m-b-25">
                                        <div class="size16 bo-rad-10 wrap-pic-w of-hidden m-r-18">
                                            <a href="{{ path('client_news_details', { 'newsSlug' : news.slug }) }}">
                                                <img src="{{ asset( image_news_location ~ news.imagePath) }}" alt="IMG-BLOG">
                                            </a>
                                        </div>

                                        <div class="size28">
                                            <a href="{{ path('client_news_details', { 'newsSlug' : news.slug }) }}" class="dis-block txt28 m-b-8">
                                                {{ news.title }}
                                            </a>

                                            <span class="txt14">
										    {{ news.createdAt|date("d/m/Y") }}
										</span>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
{% endblock %}