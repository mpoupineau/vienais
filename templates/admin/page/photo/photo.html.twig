{% extends 'admin/page/photo.html.twig' %}
{% set page = 'photo' %}

{% block content %}
    <div class="row">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-header card-header-text card-header-info">
                    <div class="card-text">
                        <h4 class="card-title">
                            {% block photo_action_title %}
                                {% if action == 'update' %}
                                    Modification
                                {% else %}
                                    Nouveau
                                {% endif %}
                            {% endblock %}
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row" style="padding-left: 30px;">
                        <div class="col-xl-5">
                            <div class="row">
                                {% block photo_input_image %}
                                    <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail img-raised">
                                            <img src="{{ asset('admin/img/no_image.png') }}" alt="pas d'image">
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail img-raised" ></div>
                                        <div>
                                            <span class="btn btn-raised btn-file btn-primary">
                                                <span class="fileinput-new">Choisir une image</span>
                                                <span class="fileinput-exists">Changer</span>
                                                {{ form_widget(form.image_file) }}
                                            </span>
                                            <a href="#" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Supprimer</a>
                                        </div>
                                    </div>
                                {% endblock %}
                            </div>
                        </div>
                        <div class="col-xl-7">
                            <div class="form-group">
                                {{ form_label(form.priority) }}
                                {{ form_widget(form.priority, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <div class="togglebutton">
                                    <label>
                                        {{ form_widget(form.visible) }}
                                        <span class="toggle"></span>
                                        {{ form_label(form.visible) }}
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.photoTags, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding: 0 30px;">
                        <div class="form-group" style="text-align: right">
                            {% block photo_action_button %}
                                {{ form_widget(form.save, {'label':'Ajouter', 'attr': {'class': 'btn btn-fill btn-success btn-wd'}}) }}
                            {% endblock %}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-12">
            <div class="card">
                <div class="row row-photo">
                    {% for photo in photos %}
                        <div class="col-lg-4 col-sm-12 col-photo">
                            <a href="{{ path('admin_photo_photo_update', { 'photoId': photo.id }) }}">
                                <img src="{{ asset( photo_location ~ photo.imagePath) }}" alt="image non existante">
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="photoDeleteModal" tabindex="-1" role="dialog" aria-labelledby="photoDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="photoDeleteModalLabel">Supprimer la photo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a href="#" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script>
$('#photoDeleteModal').on('show.bs.modal', (event) => {
    var button = $(event.relatedTarget) // Button that triggered the modal
    var name = button.data('name') // Extract info from data-* attributes
    var id = button.data('id') // Extract info from data-* attributes
    var url = '{{ path('admin_product_cuvee_delete', { 'cuveeId': 'id' }) }}'
        url = url.replace("id", id);
        var modal = $(this);
        modal.find('.modal-title').text('Supprimer la cuv√©e ' + name)
        modal.find('.modal-footer a').attr("href", url)
    })
</script>
{% endblock %}